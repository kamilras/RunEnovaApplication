<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunEnova"
        xmlns:Collections="clr-namespace:System.Collections;assembly=System.Runtime.Extensions" x:Class="RunEnova.Info"
        mc:Ignorable="d"
        Title="Window1" Height="600" Width="600">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="299*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="NazwaBazyTxt" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="400" FontSize="16" TextAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top" Margin="0,33,0,0">
            <Button Content="SystemInfos" MinWidth="100" Click="Button_Click_1" Background="#FFF3CCCC"/>
            <Button Content="Cechy" MinWidth="100" Click="Button_Click" Background="#FFD5F0AB" Width="80"/>
            <Button Content="Ustawienia" MinWidth="100" Click="Button_Click_2" Background="WhiteSmoke" Width="80"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,70,0,0" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>