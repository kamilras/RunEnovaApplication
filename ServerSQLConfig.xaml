<Window x:Class="RunEnova.ServerSQLConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunEnova"
        mc:Ignorable="d"
        Title="Server MSSQL" Height="398.687" Width="420">
    <Grid Margin="0,0,0,1">
        <Label Content="Nazwa Serwera" HorizontalAlignment="Left" Margin="33,30,0,0" VerticalAlignment="Top" Width="104" Height="26"/>
        <TextBox x:Name="UzytkownikTxtBox" HorizontalAlignment="Left" Margin="155,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" Height="26"/>
