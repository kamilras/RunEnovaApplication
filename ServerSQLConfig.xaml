        <ComboBox x:Name="ListaSQLCmbBox" HorizontalAlignment="Left" Margin="155,30,0,0" VerticalAlignment="Top" Width="235" Height="26" SelectionChanged="ListaSQLCmbBox_SelectionChanged" />
        <CheckBox x:Name="BazaChkBox" Content="Baza Aplikacji" HorizontalAlignment="Left" Margin="299,127,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="SonetaSerwerTxtBox" HorizontalAlignment="Left" Height="19" Margin="46,255,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="322"/>
