        <TextBox x:Name="SonetaExplorerTxtBox" HorizontalAlignment="Left" Height="19" Margin="46,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="322"/>
        <Button x:Name="SelectExplorerCatalogBtn" Content="..." HorizontalAlignment="Left" Margin="368,199,0,0" VerticalAlignment="Top" Width="23" Height="19" RenderTransformOrigin="2.376,0.664" Click="SelectExplorerCatalogBtn_Click"/>
        <PasswordBox x:Name="HasloTxtBox" HorizontalAlignment="Left" Margin="155,92,0,0" VerticalAlignment="Top" Width="235" Height="26" />
    </Grid>
</Window>
